
  <div class="text-center py-4 mt-3">
        <!--<a id="postlink" href="jobpost.html"><button class="btn">Post a Job<i class="fa fa-pencil ml-2"></i></button></a> -->
      <a href="/jobPost">  <button class="btn">Post a Job<i class = "fa fa-pencil ml-2"></i></button></a>
  </div>
  <div class="list-group">
  {{#each posts}}
      <div class="list-group-item list-group-item-action flex-column align-items-start job">
        <div class="d-flex w-100 justify-content-between">
          <a href="{{this.jobURL}}" class="joblink"><h5 class="mb-1">{{this.jobPosition}}</h5></a>
          <small>{{this.postDate}}</small>
        </div>
        <div class="d-flex w-100 justify-content-between">
        <small>{{this.company}}</small>
        <small>{{this.location}}</small>
      </div>
      </div>
      <div class="detailsbox"  id="detail-1">
        <div class="list-group-item list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-between">
            <small>{{this.jobDescription}}</small>
          </div>
        </div>
      </div>
      <br>

  {{/each}}

</div>

<script>
$(document).ready(function() {
    $(".detailsbox").hide();
    $(".job").mouseenter(function(){
      $(this).next().show();
    });

    $(".job").mouseleave(function(){
        $(this).next().hide();
    });
});



</script>
